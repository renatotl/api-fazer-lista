{
  "openapi": "3.0.0",
  "info": {
    "title": "API fazer-lista M4-P1",
    "description": "API para o primeiro pj do react",
    "termsOfService": "",
    "contact": {
      "email": "renatotl/github"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/agendas",
      "description": "API de teste"
    },
    {
      "url": "https://api-fazer-lista-react.onrender.com/agendas",
      "description": "API de produção"
    }
  ],
  "path": {
    "/create-agenda": {
      "POST": {
        "summary": "Criar tarefa",
        "description": "Rota responsável por criar uma tarefa",
        "tag": ["Agendas"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Agenda"
              },
              "examples": {
                "Agebdas": {
                  "value": {
                    "id": 1,
                    "text": "Olá, mundo"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Agenda"
                }
              }
            }
          }
        }
      }
    },
    "/one-agenda/{id}": {
      "get": {
        "summary": "Busca um agenda pelo ID",
        "description": "Rota responsável por buscar um agenda pelo ID",
        "tags": ["Agendas"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do agenda para a busca",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Agenda"
                }
              }
            }
          }
        }
      }
    }
  },
  "/delete-agendas/{id}": {
    "delete": {
      "summary": "Apagar uma tarefa  pelo ID",
      "description": "Rota responsável por apagar uma tarefa pelo ID",
      "tags": ["Agenda"],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Id da agenda para deleção",
          "required": true
        }
      ],
      "responses": {
        "400": {
          "description": "Bad Request"
        },
        "200": {
          "description": "OK"
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Agenda": {
        "type": "object",
        "properties": {
          "id": {
            "type": "Number"
          },
          "text": {
            "type": "string"
          }
        }
      }
    }
  }
}
